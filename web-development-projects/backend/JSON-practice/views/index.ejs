<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teachers vs Students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
   <div class="container">
    <form action="/post" method="post"  class="first">
        <button type="submit" name="type" value="students" class="btn btn-primary">Get Students Data</button>
        <button type="submit" name="type" value="teachers" class="btn btn-primary">Get Teachers Data</button>
    </form>
    </div>
   
    <div class="second">
        <% if (locals.data) { %>
            <table class="table table-hover table-bordered text-center">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                    <% if (data.grades[0] > 100) {%>
                        <th scope="col">Salary</th>
                    <% } else { %>
                        <th scope="col">Grade</th>
                     <% } %>
                </tr>
                <% data.names.forEach((name, index) => { %>
                    <tr>
                        <td scope="row"><%= name %></td> 
                        <td><%= data.addresses[index] %></td>
                        <td><%= data.grades[index] %></td></tr>
                <% }); %>
            </table>
        <% } else { %>
            <h2>Please click one of the buttons to get data</h2>
        <% } %>
    </div>
  <footer>
    <p>Copyright &copy; 2024, Abdifatah Ibrahim</p>
  </footer>
</body>
</html>