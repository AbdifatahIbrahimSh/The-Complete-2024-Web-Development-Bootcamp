<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%# Template Language for node and express.js %>
    <h1><%= title %></h1>
    <p>Current seconds: <%= seconds %></p>
    <% if (seconds % 2 === 0) { %>   
        <ul>
            <% for( let i = 0; i < items.length; i++ ) { %>
                <li><%= items[i] %></li>    
            <% } %>
        </ul>
    <% } else { %>
        <p>No item is displayed</p>  
    <% } %>
    <%- htmlContent %>
    <%- include('footer.ejs') %>
</body>
</html>