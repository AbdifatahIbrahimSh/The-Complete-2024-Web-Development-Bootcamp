<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>World Capital Quiz</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <form action="/submit" method="post">
        <dv class="horizontal-container">
            <h2 class="total-score">Total Score: <%= locals.totalScore ? totalScore : "0" %></h2>
        </dv>
        <div class="country-name">
            <h1> <%= question.country %></h1>
        </div>
        <input class="form-control" type="text" name="capitalName" autofocus autocomplete="off" placeholder="Enter the capital">
        <div class="submit">
            <button type="submit">Submit</button>
        </div>
    </form>
</body>
</html>