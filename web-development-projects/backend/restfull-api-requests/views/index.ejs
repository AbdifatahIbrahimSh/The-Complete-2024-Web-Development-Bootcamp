<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Full RESTfull API Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="styles/style.css">
</head>
<body>
    <div class="container">
        <div class="content">
            <% if (locals.data) { %>
             <p><%= data %></p>
            <% } else { %>
             <p>Fetch Data By filling the form</p>
            <% } %>  
        </div>
        <form action="">
            <label for="id">Id:</label>
            <input class="form-control" type="text" id="id" name="id">
            <label for="secret">Secret:</label>
            <input class="form-control" type="text" id="secret" name="secret">
            <label for="score">Score:</label>
            <input class="form-control type="text" id="score" name="score">

            <label for="route">Route:</label>
            <input class="btn btn-success" type="submit" name="submit" value="GET" formaction="/get-secret" formmethod="POST">
            <input class="btn btn-primary" type="submit" name="submit" value="POST" formaction="/post-secret" formmethod="POST">
            <input class="btn btn-info" type="submit" name="submit" value="PUT" formaction="/put-secret" formmethod="POST">
            <input class="btn btn-warning" type="submit" name="submit" value="PATCH" formaction="/patch-secret" formmethod="post">
            <input class="btn btn-danger" type="submit" name="submit" value="DELETE" formaction="/delete-secret" formmethod="post">
        </form>
    </div>
</body>
</html>